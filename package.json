{
    "name": "azure-upgrade-portal",
    "version": "0.1.0",
    "description": "A tool to identify what resources in Azure need upgrading and help you upgrade them.",
    "main": "dist/api/server.js",
    "scripts": {
        "build": "tsc && cp -R $(ls -d1 src/portal/* | egrep -v '.ts$') dist/portal/.",
        "start-api": "node dist/api/server.js",
        "start-jobs": "node dist/jobs/server.js",
        "test": "mocha dist/**/test.js --reporter mocha-multi-reporters --reporter-options configFile=test/config-api.json",
        "test-api": "mocha dist/api/test.js --reporter mocha-multi-reporters --reporter-options configFile=test/config-api.json",
        "test-jobs": "mocha dist/jobs/test.js --reporter mocha-multi-reporters --reporter-options configFile=test/config-jobs.json"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/plasne/azure-upgrade-portal.git"
    },
    "author": "",
    "license": "ISC",
    "bugs": {
        "url": "https://github.com/plasne/azure-upgrade-portal/issues"
    },
    "homepage": "https://github.com/plasne/azure-upgrade-portal#readme",
    "dependencies": {
        "axios": "^0.18.0",
        "azure-storage": "^2.10.1",
        "commander": "^2.18.0",
        "dotenv": "^6.0.0",
        "es6-promise-pool": "^2.5.0",
        "express": "^4.16.3",
        "overarg": "^1.0.2",
        "uuid": "^3.3.2",
        "winston": "^3.1.0"
    },
    "devDependencies": {
        "@types/dotenv": "^4.0.3",
        "@types/express": "^4.16.0",
        "@types/mocha": "^5.2.5",
        "@types/node": "^10.11.0",
        "@types/uuid": "^3.4.4",
        "mocha": "^5.2.0",
        "mocha-junit-reporter": "^1.18.0",
        "mocha-multi-reporters": "^1.1.7",
        "tslint": "^5.11.0",
        "typescript": "^3.0.3"
    }
}
